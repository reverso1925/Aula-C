#include <stdio.h>
int main() {
    int numero;
    int numero_ant;
    int numero_suc;
    printf("Insira o seu número: ");
    scanf("%d", &numero);
    numero_ant = numero - 1;
    numero_suc = numero + 1;
    printf("O antecessor do seu número é: %.1d\n", numero_ant);
    printf("O sucessor do seu número é: %.1d\n", numero_suc);
}
